/* ==========================================================
   HEADER - Styles inspirés du Bloc 2 Angular
   Variables définies dans globals.css
   ========================================================== */

/* ==========================================================
   LIEN D'ÉVITEMENT (Accessibilité WCAG)
   ========================================================== */

.skipLink {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--turquoise);
    color: var(--blanc);
    padding: 8px 16px;
    z-index: 10000;
    text-decoration: none;
    font-weight: 600;
    transition: top 0.3s;
}

.skipLink:focus {
    top: 0;
}

/* ==========================================================
   HEADER PRINCIPAL
   ========================================================== */

.baseHeader {
    background-color: var(--blanc);
    padding: 10px 5%;
    position: relative;
    max-width: 100%;
}

.headerContainer {
    max-width: 1700px;
    margin: 0 auto;
}

.headerTop {
    display: grid;
    grid-template-columns: 2fr auto 1.5fr 1.5fr;
    gap: 20px;
    align-items: center;
    padding-right: 160px;
    /* Espace pour le ruban */
}

/* === LOGO === */

.headerLogo {
    display: flex;
    align-items: center;
}

.logoLink {
    display: block;
}

.logoImg {
    height: auto;
    max-height: 60px;
    width: auto;
}

/* === BOUTON DYSLEXIE === */

.headerDyslexie {
    display: flex;
    align-items: center;
    justify-content: center;
}

.btnDyslexie {
    display: flex;
    align-items: center;
    gap: 6px;
    background: transparent;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 8px 12px;
    cursor: pointer;
    font-size: 14px;
    color: var(--gris-fonce);
    transition: all 0.2s;
}

.btnDyslexie:hover {
    border-color: var(--turquoise);
    color: var(--turquoise);
}

.dyslexieIcon {
    font-size: 18px;
}

.dyslexieText {
    display: none;
}

@media (min-width: 1024px) {
    .dyslexieText {
        display: inline;
    }
}

/* === BLOC CONTACT 24/7 === */

.headerContact {
    display: flex;
    align-items: center;
    justify-content: center;
}

.blocContact {
    display: flex;
    align-items: center;
    gap: 10px;
}

.blocContactIco {
    width: 46px;
    height: 46px;
    min-width: 46px;
    border-radius: 50%;
    background-color: var(--turquoise);
    color: var(--blanc);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
}

.textContact {
    text-align: left;
}

.blocContactLabel {
    font-size: 14px;
    color: var(--gris-moyen);
}

.blocContactNumber {
    font-size: 15px;
    font-weight: 700;
    color: var(--gris-fonce);
}

/* === BLOC RECHERCHE === */

.headerSearch {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.blocSearch {
    position: relative;
    width: 100%;
    max-width: 300px;
}

.blocSearchInput {
    width: 100%;
    border-radius: 25px;
    padding: 10px 45px 10px 20px;
    border: 1px solid #ddd;
    font-size: 14px;
    height: 40px;
    outline: none;
    transition: border-color 0.2s;
}

.blocSearchInput:focus {
    border-color: var(--turquoise);
    box-shadow: 0 0 0 2px rgba(95, 200, 194, 0.2);
}

.blocSearchBtn {
    position: absolute;
    right: 0;
    top: 0;
    height: 100%;
    background: transparent;
    border: none;
    padding: 0 14px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
}

.blocSearchIco {
    font-size: 18px;
    color: #999;
    transition: color 0.2s;
}

.blocSearchBtn:hover .blocSearchIco {
    color: var(--turquoise);
}

/* ==========================================================
   RUBAN TURQUOISE
   ========================================================== */

.ribbon {
    position: absolute;
    top: 0;
    right: 1.5%;
    width: 140px;
    min-height: 150px;
    background-color: var(--turquoise);
    padding: 15px 10px;
    text-align: center;
    z-index: 1000;
}

/* Triangle décoratif sous le ruban */
.ribbon::before {
    content: '';
    position: absolute;
    bottom: -20px;
    left: 0;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 20px 70px 0 0;
    border-color: var(--turquoise) transparent transparent transparent;
}

.ribbon::after {
    content: '';
    position: absolute;
    bottom: -20px;
    right: 0;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 20px 0 0 70px;
    border-color: var(--turquoise) transparent transparent transparent;
}

.ribbonNav {
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.ribbonItem {
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
}

.ribbonItem:last-child {
    border-bottom: none;
}

.ribbonBtn {
    display: block;
    width: 100%;
    background: none;
    border: none;
    color: var(--blanc);
    font-size: 12px;
    font-weight: 600;
    padding: 10px 5px;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.2s;
}

.ribbonBtn:hover {
    background-color: rgba(0, 0, 0, 0.1);
}

/* ==========================================================
   NAVIGATION PRINCIPALE (Barre turquoise)
   ========================================================== */

.navbar {
    background-color: var(--marron);
    padding: 0;
}

.navbarContainer {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

/* Hamburger - caché sur desktop */
.navbarBrand {
    display: none;
    color: var(--blanc);
    font-weight: 700;
    font-size: 14px;
    text-transform: uppercase;
    padding: 12px 15px;
}

.navbarToggler {
    display: none;
    background: transparent;
    border: none;
    padding: 10px 15px;
    cursor: pointer;
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
}

.navbarTogglerIcon {
    color: var(--blanc);
    font-size: 24px;
}

/* Menu de navigation */
.navbarCollapse {
    display: flex;
}

.navbarNav {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 0;
}

.navItem {
    position: relative;
}

.navLink {
    display: block;
    color: var(--blanc);
    text-decoration: none;
    padding: 12px 25px;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: background-color 0.2s;
}

.navLink:hover {
    background-color: rgba(0, 0, 0, 0.1);
}

/* ==========================================================
   RESPONSIVE - Tablettes (< 1024px)
   ========================================================== */

@media (max-width: 1024px) {
    .headerTop {
        grid-template-columns: 1fr 1fr;
        padding-right: 150px;
        gap: 15px;
    }

    .headerDyslexie {
        display: none;
    }

    .headerContact {
        justify-content: flex-start;
    }

    .headerSearch {
        justify-content: flex-start;
        grid-column: span 2;
    }

    .blocSearch {
        max-width: 100%;
    }

    .ribbon {
        width: 120px;
        padding: 12px 8px;
    }

    .ribbonBtn {
        font-size: 11px;
        padding: 8px 4px;
    }
}

/* ==========================================================
   RESPONSIVE - Mobile (< 768px)
   ========================================================== */

@media (max-width: 768px) {
    .baseHeader {
        padding: 10px 15px;
        position: relative;
    }

    .headerTop {
        display: flex;
        flex-direction: column;
        gap: 10px;
        padding-right: 0;
        justify-content: flex-start;
        align-items: flex-start;
    }

    /* Logo et Ruban sur la même ligne */
    .headerLogo {
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

    .logoImg {
        max-height: 50px;
    }

    .headerDyslexie {
        display: flex;
        justify-content: center;
        align-self: center;
    }

    .headerContact {
        justify-content: flex-start;
    }

    .blocContactLabel,
    .blocContactNumber {
        font-size: 12px;
    }

    .blocContactIco {
        width: 38px;
        height: 38px;
        min-width: 38px;
        font-size: 16px;
    }

    .headerSearch {
        justify-content: flex-start;
        width: 100%;
    }

    .blocSearch {
        max-width: 100%;
    }

    /* Ruban à droite sur mobile */
    .ribbon {
        position: absolute;
        top: 0;
        right: 3px;
        width: 120px;
        min-height: auto;
        padding: 10px 8px;
    }

    .ribbonNav {
        flex-direction: column;
        gap: 2px;
    }

    .ribbonItem {
        border-bottom: 1px solid rgba(0, 0, 0, 0.15);
    }

    .ribbonBtn {
        padding: 8px 5px;
        font-size: 11px;
    }

    /* Navbar mobile */
    .navbarBrand {
        display: block;
    }

    .navbarToggler {
        display: block;
    }

    .navbarCollapse {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background-color: var(--turquoise);
        z-index: 100;
    }

    .navbarCollapse.show {
        display: block;
    }

    .navbarNav {
        flex-direction: column;
    }

    .navLink {
        text-align: center;
        padding: 15px 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }
}

@media (max-width: 480px) {

    /* Header : plus besoin d'espace pour le ruban */
    .headerTop {
        padding-right: 0;
    }

    .headerSearch {
        width: 100%;
    }

    /* Ruban : plus besoin des triangles */
    .ribbon::before,
    .ribbon::after {
        display: none;
    }

    /* Ruban : pleine largeur en haut */
    .ribbon {
        position: relative;
        /* ← Sort de position absolute */
        width: 100%;
        /* ← Pleine largeur */
        order: -1;
        /* ← Place en PREMIER */
        margin-bottom: 10px;
        right: 0;

    }

    /* Ruban : éléments en ligne (horizontal) */
    .ribbonNav {
        flex-direction: row;
        justify-content: center;
        gap: 10px;
    }

    .ribbonItem {
        border-bottom: none;
        border-right: 1px solid rgba(0, 0, 0, 0.15); /* Séparateur vertical */
        padding-right: 10px;
    }

    .ribbonItem:last-child {
        border-right: none; /* ← SAUF le dernier */
        padding-right: 0;
    }
}